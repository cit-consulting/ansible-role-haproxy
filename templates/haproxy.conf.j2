global
        log /dev/log    local0
        log /dev/log    local1 notice
        chroot /var/lib/haproxy
        pidfile     /var/run/haproxy.pid
        stats socket /run/haproxy/admin.sock mode 660 level admin
        stats timeout 30s
        maxconn {{ haprohy_maxconn }}
        user haproxy
        group haproxy
        daemon

        tune.ssl.default-dh-param 4096

        # Default SSL material locations
#        ca-base /etc/ssl/certs
#        crt-base /etc/ssl/private

        # Default ciphers to use on SSL-enabled listening sockets.
        # For more information, see ciphers(1SSL). This list is from:
        #  https://hynek.me/articles/hardening-your-web-servers-ssl-ciphers/
        ssl-default-bind-ciphers ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DHE-RSA-AES256-SHA:DH+AES256:ECDH+AES128:DH+AES:ECDH+3DES:DH+3DES:RSA+AESGCM:RSA+AES:RSA+3DES:!aNULL:!MD5:!DSS
        ssl-default-bind-options no-sslv3 no-tlsv10

defaults
        log     global
        mode    http
        option  httplog
        option  dontlognull
        option  forwardfor
        option  http-server-close
        stats   enable
        stats   uri /stats
        stats   realm Haproxy\ Statistics
        stats   auth haproxy:password
        timeout connect 5000
        timeout client  50000
        timeout server  50000
        errorfile 400 /etc/haproxy/errors/400.http
        errorfile 403 /etc/haproxy/errors/403.http
        errorfile 408 /etc/haproxy/errors/408.http
        errorfile 500 /etc/haproxy/errors/500.http
        errorfile 502 /etc/haproxy/errors/502.http
        errorfile 503 /etc/haproxy/errors/503.http
        errorfile 504 /etc/haproxy/errors/504.http

frontend www-http
        bind *:80
        reqadd X-Forwarded-Proto:\ http
        redirect scheme https if !{ ssl_fc }

frontend www-https
        bind *:443 ssl crt /etc/ssl/private/vcs1.citc.ru.pem crt /etc/ssl/private/wiki.citc.ru.pem ca-file /etc/ssl/private/rootCA.pem verify optional crt-ignore-err all
        log-format %ci:%cp\ [%t]\ %ft\ %b/%s\ %Tq/%Tw/%Tc/%Tr/%Tt\ %sslv/%sslc\ %ST\ %B\ %CC\ %CS\ %tsc\ %ac/%fc/%bc/%sc/%rc\ %sq/%bq\ %hr\ %hs\ %{+Q}r
        reqadd X-Forwarded-Proto:\ https
        use_backend bk_vcs1 if { ssl_fc_sni vcs1.citc.ru }
        use_backend bk_wiki if { ssl_fc_sni wiki.citc.ru }
#        use_backend bk_maven1 if { ssl_fc_sni maven1.citc.ru }
#        use_backend bk_issues if { ssl_fc_sni issues.citc.ru }

backend bk_vcs1
        server vcs1 10.202.202.160:80 check

backend bk_wiki
        server wiki 10.202.202.100:80 check

